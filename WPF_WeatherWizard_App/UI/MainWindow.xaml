<Window x:Class="WPF_WeatherWizard_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:WPF_WeatherWizard_App"
        mc:Ignorable="d"
        Title="Weather Wizard" Height="450" Width="800" MinWidth="630" MinHeight="450" Background="LightBlue">
    <Grid Margin="30, 30, 30, 15">
        <Grid.RowDefinitions >
            <RowDefinition ></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="1.2*"></RowDefinition>
            <RowDefinition Height="1.2*"></RowDefinition>
            
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition  />
                <ColumnDefinition/>
                <ColumnDefinition Width="1.4*" />
                <ColumnDefinition  Width="0.6*"/>
            </Grid.ColumnDefinitions>
            <DockPanel Grid.Column="0" DockPanel.Dock="Left">
                <TextBlock x:Name="tb_City" Text="{Binding Location}" DockPanel.Dock="Top" FontSize="30" />
                <TextBlock x:Name="tb_curDateTime"  Text="{Binding CurrentInfo.DateTime}" Margin="0, 10, 0, 0" />
            </DockPanel>
            <Button Grid.Column="3" DockPanel.Dock="Right"  x:Name="btn_Search" Content="Search" Height="40" VerticalAlignment="Top"/>
            <TextBox Grid.Column="2"  DockPanel.Dock="Right" Text="Enter city"  x:Name="tb_Search" Height="40" VerticalAlignment="Top" VerticalContentAlignment="Center"/>

        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*" MinWidth="70"/>
                <ColumnDefinition Width ="*"/>
                <ColumnDefinition Width="1.6*"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="0.6*"/>
            </Grid.ColumnDefinitions>

            <!--<TextBlock Grid.Column="0" x:Name="tb_curTemprature" Text="15" VerticalAlignment="Bottom"  FontSize="65" Margin="-10" />-->
            
            <Button Content="{Binding CurrentInfo.CurrentTemp}" MinWidth="50" Background="Transparent" BorderThickness="0" VerticalAlignment="Bottom" HorizontalContentAlignment="Left"  FontSize="65"/>
            <DockPanel Grid.Column="1">
                <TextBlock x:Name="tb_curCondition" Text="{Binding CurrentInfo.CurrentCondition}" DockPanel.Dock="Bottom"/>
                <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button Content="°C"  Background="Transparent" BorderThickness="0" HorizontalAlignment="Left"  HorizontalContentAlignment="Left"/>
                    <TextBlock Text=" | " HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <Button Content="°F"  Background="Transparent" BorderThickness="0" HorizontalAlignment="Left"  HorizontalContentAlignment="Left"/>
                </StackPanel>
                <TextBlock Text=""/>
            </DockPanel>
            <Image Grid.Column="3"  x:Name="im_curCondition" Stretch="Fill"></Image>
            <StackPanel Grid.Column="4" VerticalAlignment="Center" >
                <StackPanel Orientation="Horizontal">
                    <Image x:Name="im_curFeelsLike"/>
                    <TextBlock Text="Feels like: "/>
                    <TextBlock x:Name="tb_curFeelsLike" Text="{Binding CurrentInfo.CurrentFeelsLike}"/>
                    <TextBlock Text=" °C"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Image x:Name="im_curHumidity"/>
                    <TextBlock Text="Humidity: "/>
                    <TextBlock x:Name="tb_curHumidity" Text="{Binding CurrentInfo.CurrentHumidity}"/>
                    <TextBlock Text=" %"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Image x:Name="im_curWind"/>
                    <TextBlock Text="Wind: "/>
                    <TextBlock x:Name="tb_curWind" Text="{Binding CurrentInfo.CurrentWind}"/>
                    <TextBlock Text=" km/h"/>
                </StackPanel>
            </StackPanel>
        </Grid>
        <materialDesign:Card Grid.Row="2" Background="White" UniformCornerRadius="20" Margin="0, 10, 0, 5"  >
            <ListView x:Name="lv_TimeForecastForDay">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel HorizontalAlignment="Stretch" Margin="10, 0, 10,0">
                            <TextBlock Text="{Binding Time}" HorizontalAlignment="Center" />
                            <!--<Image Source="{Binding ForecastImageURL}" Width="20" Height="20"></Image>-->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="Temp: " FontSize="11"/>
                                <TextBlock Text="{Binding Temp}" FontSize="11"/>
                                <TextBlock Text=" °C" FontSize="11" />
                            </StackPanel>
                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" >
                                <TextBlock Text="Wind: " FontSize="11" />
                                <TextBlock Text="{Binding Wind}" FontSize="11" />
                                <TextBlock Text=" km/h"/>
                            </StackPanel>
                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" >
                                <TextBlock Text="Chance of rain: "  FontSize="11" />
                                <TextBlock Text="{Binding ChanceOfRain}" FontSize="11" />
                            </StackPanel>
                            <TextBlock Text="{Binding Condition}"  HorizontalAlignment="Center" FontSize="11" />
                            
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>

        </materialDesign:Card>

        <materialDesign:Card Grid.Row="3" Background="White" UniformCornerRadius="20" Margin="0, 5, 0, 0" >
            <ListView x:Name="lv_Forecast">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel HorizontalAlignment="Center" Margin="30, 0, 30,0" >
                            <TextBlock Text="{Binding ForecastDay}" />
                            <Image Source="{Binding ForecastImageURL}" Width="20" Height="20"></Image>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding ForecastMinTemp}" />
                                <TextBlock Text="° - " />
                                <TextBlock Text="{Binding ForecastMaxTemp}" />
                                <TextBlock Text="°" />
                            </StackPanel>
                            <TextBlock Text="{Binding ForecastCondition}" HorizontalAlignment="Center" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
               
            </ListView>
           

        </materialDesign:Card>

    </Grid>
</Window>
